<resources>
    <style name="Theme.Mumla" parent="Base.Theme.Mumla">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="pttPressed">@color/md_theme_dark_primary_lighter</item>
        <!-- Fix text color in drawer -->
        <item name="android:textColorPrimaryInverse">#dddddd</item>
        <item name="android:textColorSecondaryInverse">#dddddd</item>

        <!-- Dark primary color is too dark for dialog buttons (on dark background). We tweak old
             style, material style, and old preference dialogs to use a higher-contrast primary -->
        <item name="alertDialogTheme">@style/TweakedAlertDialog</item>
        <item name="materialAlertDialogTheme">@style/TweakedMaterialAlertDialog</item>
        <item name="dialogPreferenceStyle">@style/TweakedDialogPreference</item>
        <!-- Mark the cardview background a bit darker (used for server list and chat item list) -->
        <item name="cardStyle">@style/Theme.Mumla.Dark.CardView</item>
        <!-- Make it so appbar's popupmenu has dark theme (it would anyway in general dark theme,
        but this is needed because in the light theme this is set to Material3.Light z-->
        <item name="popupOverlay">@style/ThemeOverlay.Material3.Dark</item>
    </style>

    <style name="TweakedAlertDialog" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="colorPrimary">@color/md_theme_dark_primary_lighter_more</item>
    </style>
    <style name="TweakedMaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/md_theme_dark_primary_lighter_more</item>
    </style>
    <!-- forcing preference dialogs to use the Material builder -->
    <style name="TweakedDialogPreference" parent="Preference.DialogPreference.Material" />

    <style name="Theme.Mumla.Dark.CardView" parent="CardView">
        <item name="cardBackgroundColor">#202020</item>
    </style>
</resources>
